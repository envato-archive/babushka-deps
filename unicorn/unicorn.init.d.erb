start)
  sig 0 && echo >&2 "Already running" && exit 0
  export $ENV_OPTS
  $CMD
  ;;
stop)
  sig QUIT && exit 0
  echo >&2 "Not running"
  ;;
force-stop)
  sig TERM && exit 0
  echo >&2 "Not running"
  ;;
restart|reload)
  sig HUP && echo reloaded OK && exit 0
  echo >&2 "Couldn't reload, starting '$CMD' instead"
  export $ENV_OPTS
  $CMD
  ;;
