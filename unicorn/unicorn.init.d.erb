old_pid="$PID.oldbin"

cd $APP_ROOT || exit 1

sig () {
  test -s "$PID" && kill -$1 `cat $PID`
}

oldsig () {
  test -s $old_pid && kill -$1 `cat $old_pid`
}

workersig () {
  workerpid="/var/run/marketplace/unicorn_$2.pid"

  test -s "$workerpid" && kill -$1 `cat $workerpid`
